    "cookie-parser": "1.4.6",
    "crypto": "1.0.1",
    "del": "6.1.1",
    "express": "4.18.1",
    "express-nunjucks": "2.2.5",
    "express-sanitized": "0.5.1",
    "govuk-elements-sass": "3.1.3",
    "govuk-frontend": "4.2.0",
    "govuk_frontend_toolkit": "9.0.1",
    "govuk_template_jinja": "0.26.0",
    "gulp-concat": "2.6.1",
    "gulp-csso": "4.0.1",
    "gulp-dart-sass": "1.0.2",
    "gulp-debug": "4.0.0",
    "gulp-mocha": "8.0.0",
    "gulp-postcss": "9.0.1",
    "gulp-uglify": "3.0.2",
    "gulp4-run-sequence": "1.0.1",
    "helmet": "5.1.1",
